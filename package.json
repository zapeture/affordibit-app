{
  "name": "affordibit-app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev:spotlight": "spotlight-sidecar",
    "dev:next": "next dev",
    "dev": "concurrently 'pnpm run dev:next' 'pnpm run dev:spotlight'",
    "build": "pnpm run db:migrate && pnpm run db:push && next build",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true pnpm run build",
    "clean": "rimraf .next .swc out coverage",
    "lint": "next lint",
    "format": "next lint --fix && prettier '**/*.{json,yaml}' --write --ignore-path .gitignore",
    "check-types": "tsc --noEmit --pretty",
    "test": "vitest run",
    "commit": "cz",
    "db:start": "docker-compose --env-file .env.local up -d",
    "db:generate": "dotenv -c -- drizzle-kit generate",
    "db:migrate": "dotenv -c -- tsx ./scripts/dbMigrate.ts",
    "db:rollback": "dotenv -c -- drizzle-kit drop",
    "db:push": "dotenv -c -- drizzle-kit push",
    "db:studio": "dotenv -c -- drizzle-kit studio",
    "test:e2e": "playwright test",
    "test:e2e:ui": "cross-env playwright test --headed --ui",
    "storybook": "BROWSER=none storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:serve": "http-server storybook-static --port 6006 --silent",
    "serve-storybook": "run-s storybook:*",
    "test-storybook:ci": "start-server-and-test serve-storybook http://127.0.0.1:6006 test-storybook",
    "prepare": "husky",
    "preinstall": "pnpx only-allow pnpm"
  },
  "dependencies": {
    "@clerk/localizations": "^2.4.2",
    "@clerk/nextjs": "^5.0.12",
    "@clerk/testing": "^1.1.6",
    "@hookform/resolvers": "^3.4.0",
    "@logtail/pino": "^0.4.21",
    "@playwright/test": "^1.44.1",
    "@radix-ui/react-switch": "^1.1.0",
    "@sentry/nextjs": "^7.116.0",
    "@spotlightjs/spotlight": "^1.2.17",
    "@storybook/manager-api": "^8.1.9",
    "@storybook/theming": "^8.1.9",
    "@t3-oss/env-nextjs": "^0.10.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.21.4",
    "drizzle-orm": "^0.30.10",
    "lucide-react": "^0.396.0",
    "next": "14.2.4",
    "next-intl": "^3.14.1",
    "only-allow": "^1.2.1",
    "pg": "^8.11.5",
    "pino": "^8.21.0",
    "pino-pretty": "^11.0.0",
    "postgres": "^3.4.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.51.4",
    "react-icons": "^5.2.1",
    "sharp": "^0.33.4",
    "swiper": "^11.1.4",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@clerk/clerk-js": "^5.6.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@faker-js/faker": "^8.4.1",
    "@next/bundle-analyzer": "^14.2.3",
    "@percy/cli": "1.28.6",
    "@percy/playwright": "^1.0.5",
    "@playwright/test": "^1.44.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-essentials": "^8.1.9",
    "@storybook/addon-interactions": "^8.1.9",
    "@storybook/addon-links": "^8.1.9",
    "@storybook/addon-onboarding": "^8.1.9",
    "@storybook/blocks": "^8.1.9",
    "@storybook/nextjs": "^8.1.9",
    "@storybook/react": "^8.1.9",
    "@storybook/test": "^8.1.9",
    "@storybook/test-runner": "^0.18.1",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/expect": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "checkly": "^4.5.2",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-next": "^14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-playwright": "^1.6.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-tailwindcss": "^3.15.2",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-unused-imports": "^3.2.0",
    "eslint-plugin-vitest": "~0.4.1",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "jiti": "^1.21.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "npm-run-all2": "^6.2.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "semantic-release": "^23.1.1",
    "start-server-and-test": "^2.0.3",
    "storybook": "^8.1.9",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5",
    "vite": "^5.2.13",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0",
    "vitest-fail-on-console": "^0.7.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "author": "zapeture (https://github.com/zapeture/affordibit-app)",
  "packageManager": "pnpm@9.2.0+sha512.98a80fd11c2e7096747762304106432b3ddc67dcf54b5a8c01c93f68a2cd5e05e6821849522a06fb76284d41a2660d5e334f2ee3bbf29183bf2e739b1dafa771"
}
